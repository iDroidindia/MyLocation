<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/textView1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1_name"
        android:layout_below="@+id/textView1_name"
        android:text="Latitude: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2_latitude"
        android:layout_below="@+id/textView2_latitude"
        android:text="Longitude: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3_longitude"
        android:layout_below="@+id/textView3_longitude"
        android:text="Description: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3_longitude"
        android:layout_alignBottom="@+id/textView3_longitude"
        android:layout_toRightOf="@+id/textView3_longitude"
        android:text="TextView" />

    <TextView
        android:id="@+id/loc_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4_description"
        android:layout_alignBottom="@+id/textView4_description"
        android:layout_alignLeft="@+id/loc_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3_longitude"
        android:layout_toRightOf="@+id/textView3_longitude"
        android:text="TextView"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/textView3_longitude"
        android:layout_toRightOf="@+id/textView3_longitude"
        android:layout_toEndOf="@+id/textView3_longitude" />

</RelativeLayout>
